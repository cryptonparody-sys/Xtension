{
    "manifest_version": 3,
    "name": "Xtension",
    "version": "1.0.0",
    "description": "Your X/Discord Companion - AI-powered replies, translations, and smart automation for X (Twitter) and Discord",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "alarms",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://pro.x.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://openrouter.ai/*",
        "https://api.openai.com/*",
        "https://api.deepseek.com/*",
        "https://api.anthropic.com/*",
        "https://api.groq.com/*",
        "https://api.z.ai/*",
        "https://discord.com/*"
    ],
    "background": {
        "service_worker": "runtime/service.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://pro.x.com/*",
                "https://discord.com/*"
            ],
            "js": ["pagehooks/injector.js"],
            "css": ["pagehooks/injector.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "Xtension Control Panel",
        "default_popup": "controlpanel/panel.html",
        "default_icon": {
            "16": "icons/images.png",
            "48": "icons/images.png",
            "128": "icons/images.png"
        }
    },
    "icons": {
        "16": "icons/images.png",
        "48": "icons/images.png",
        "128": "icons/images.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "pagehooks/injector.css",
                "core/options.js"
            ],
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://pro.x.com/*",
                "https://discord.com/*"
            ]
        }
    ]
}
